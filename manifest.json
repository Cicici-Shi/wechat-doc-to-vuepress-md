{
  "manifest_version": 2,
  "name": "微信文章转vuepress-md文档",
  "version": "2.1",
  "description": "将微信文章转换为Markdown格式，可复制粘贴，图片下载并重命名。",
  "permissions": ["activeTab", "clipboardWrite", "downloads"],
  "background": {
    "scripts": ["turndown-plugin-gfm.js", "turndown.js", "background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["turndown-plugin-gfm.js", "turndown.js", "content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup/popup.html",
    "default_title": "转换为Markdown"
  },
  "icons": {
    "48": "icon.png"
  }
}
